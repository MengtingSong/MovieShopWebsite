@using MovieShopMVC.Services
@inject ICurrentUserService _currentUserService

@if (_currentUserService.IsAuthenticated)
{
    /*First Name Last Name, Edit Profile, Logout */    
    <div class="dropdown">
        <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-expanded="false">
            @_currentUserService.FullName
        </a>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
            <a class="dropdown-item" asp-controller="User" asp-action="Purchases" >Purchases</a>
            <a class="dropdown-item" asp-controller="User" asp-action="Favorites" >Favorites</a>
            <a class="dropdown-item" asp-controller="Account" asp-action="Account" >Account</a>
            <a class="dropdown-item" asp-controller="Account" asp-action="Logout" >Logout</a>
        </div>
    </div>
}
else
{
    <div class="navbar-collapse collapse">
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a asp-controller="Account" asp-action="Login" class="btn btn-pill btn-outline-primary rounded-pill">Login</a>
            </li>
            <li class="nav-item">
                <a asp-controller="Account" asp-action="Register" class="btn btn-outline-primary rounded-pill">Register</a>
            </li>
        </ul>
    </div>
}